<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10sp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/other_msg_item_layout"
    android:padding="10dp">

    <ImageView
        android:id="@+id/profile"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_person" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/profile"
        android:text="messages about " />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView10"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:text="Anynomus"
        android:textColor="@color/mycolor1"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/profile" />


    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_below="@id/textView10"
        android:layout_toRightOf="@id/profile"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:text="dummy : hello brother" />


    <Button
        android:id="@+id/see_all_msg_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile"
        android:layout_marginHorizontal="20sp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="all messsges" />

</RelativeLayout>